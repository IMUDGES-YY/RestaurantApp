<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="52dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp">
        <View
                android:layout_height="1dp"
                android:background="#DBDBEB"
                android:layout_width="fill_parent">

        </View>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"

    >
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/linear_layout_main"
        >
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:src="@mipmap/home"
                    android:id="@+id/img_btn_home"
                    android:clickable="false"

            />
            <TextView
                    android:text="主页"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
            />

        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/linear_layout_order"
        >
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:src="@mipmap/form"
                    android:id="@+id/img_btn_order"
                    android:clickable="false"

            />
            <TextView
                    android:text="订单"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/linear_layout_user"
        >
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:src="@mipmap/my"
                    android:id="@+id/img_btn_user"
                    android:clickable="false"

            />
            <TextView
                    android:text="我的"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
            />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>